        "express": "^4.18.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@types/nodemailer": "^6.4.14",
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2"
    },
    "private": true
